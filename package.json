{
  "name": "antigravity-watcher",
  "displayName": "Antigravity Watcher",
  "version": "1.0.1",
  "description": "Fetch Antigravity usage and quota information",
  "publisher": "htng-dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HuyTranNG/antigravity-watcher.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "antigravity-watcher.checkQuota",
        "title": "Antigravity watcher: Check Quota"
      },
      {
        "command": "antigravity-watcher.openSettings",
        "title": "Antigravity watcher: Open Settings"
      }
    ],
    "configuration": {
      "title": "Antigravity Watcher",
      "properties": {
        "antigravity-watcher.refreshInterval": {
          "type": "integer",
          "default": 2,
          "description": "Refresh interval in minutes for the status bar and quota info."
        },
        "antigravity-watcher.thresholds": {
          "type": "object",
          "default": {
            "high": 0.8,
            "medium": 0.3,
            "low": 0.05,
            "exhausted": 0
          },
          "description": "Remaining fraction thresholds for status levels."
        },
        "antigravity-watcher.icons": {
          "type": "object",
          "default": {
            "high": "üü¢",
            "medium": "üü°",
            "low": "üü†",
            "critical": "üî¥",
            "exhausted": "‚ö†Ô∏è"
          },
          "description": "Icons representing different remaining fraction levels."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "antigravity-watcher",
          "title": "Antigravity Watcher",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "antigravity-watcher": [
        {
          "type": "webview",
          "id": "antigravity-watcher.chartView",
          "name": "Quota Charts",
          "icon": "resources/icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build-extension": "vsce package"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.0.9",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0"
  }
}